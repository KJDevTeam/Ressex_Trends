
@{
    ViewBag.Title = "Project List";
}
@Html.Action("_Searchview", "Home")
<div class="mainbodyWrap d-flex flex-column flex-1">
    <div class="container flex-1">
        <div class="innerSectionHeader searchPageHeader d-flex" id="ProjectSortandFilter">
            <a href="@Url.Action("Index","Home")" class="mr-2 pt-2"><img src="~/images/chevron-left.svg" alt=""></a>
            <div class="header flex-1 d-flex flex-column">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <h3 class="mb-0" id="ProjectlistHeading"></h3>
                        <div class="ml-3 pl-2 text20px font-w-400 searchInfo" id="ProjectPaginationText">
                        </div>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="custom-control custom-radio ">
                            <input type="radio" class="custom-control-input" id="projects" value="projects" name="projects-search" checked="">
                            <label class="custom-control-label pointer" for="projects">Projects</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" id="locations" value="locations" name="projects-search">
                            <label class="custom-control-label pointer" for="locations">Locations</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" id="pincodes" value="pincodes" name="projects-search">
                            <label class="custom-control-label pointer mr-0" for="pincodes">Pincodes</label>
                        </div>
                    </div>
                </div>
                <div class="border-h"></div>
                <div class="d-flex align-items-center justify-content-end">
                    <div class="mr-1 sortBy">Sort by :</div>
                    <div class="d-flex mr-3" id="ProjectnameSortID">
                        <a href="javascript:void(0)" class="pr-0" onclick="ProjectNameSortclick(event)">Name</a>
                        <a href="javascript:void(0)" class="" onclick="ProjectNameSortclick(event)" id="ProjectNameSortIcon"></a>
                    </div>
                    <div class="d-flex mr-3" id="ProjectCurrRateSortID">
                        <a href="javascript:void(0)" class="pr-0" onclick="ProjectCurRateSortclick(event)">Current Rate</a>
                        <a href="javascript:void(0)" class="" id="ProjectCurRateSortIcon" onclick="ProjectCurRateSortclick(event)"></a>
                    </div>
                    <div class="d-flex mr-3" id="ProjectyoySortID">
                        <a href="javascript:void(0)" class="pr-0" onclick="ProjectYoySortclick()">YoY Change(%)</a>
                        <a href="javascript:void(0)" class="" id="ProjectYoySortIcon" onclick="ProjectYoySortclick(event)"></a>
                    </div>
                    <div class="d-flex mr-3" id="ProjectCAGR3YSortID">
                        <a href="javascript:void(0)" class="pr-0" onclick="Projectcagr3ySortclick()">CAGR (3Y)</a>
                        <a href="javascript:void(0)" class="" id="Projectcagr3ySortIcon" onclick="Projectcagr3ySortclick(event)"></a>

                    </div>
                    <div class="d-flex mr-0" id="ProjectCAGR5YSortID">
                        <a href="javascript:void(0)" class="pr-0" onclick="Projectcagr5ySortclick()">CAGR (5Y)</a>
                        <a href="javascript:void(0)" class="" id="Projectcagr5ySortIcon" onclick="Projectcagr5ySortclick(event)"></a>
                    </div>
                </div>

            </div>
        </div>

        <section class="searchResultSec">

            <div id="ProjectList">

            </div>
            <div class="text-center mt-5">
                <button class="btn btn-red rounded-0 viewMoreBtn" onclick="ProjectViewmoreListClick()" id="ProjectviewmoreList">View more</button>
            </div>
        </section>
    </div>
</div>




@section scripts{


    <script src="~/Scripts/PageLavel/List/ProjectList.js"></script>
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
            var selectedFilter;
            var _filterSelected = localStorage.getItem('ShortcutFilter');

            if (_filterSelected != null) {
                selectedFilter = JSON.parse(_filterSelected);
            }
            if (selectedFilter != null) {
                ProjectListModule.init(selectedFilter.sortby, selectedFilter.orderby);
            }
            else {
                ProjectListModule.init("name", "asc");
            }

            $('#overlay').fadeOut();

        });
    </script>



}
