
@{
    ViewBag.Title = "Pincode List";
}

<div class="mainbodyWrap d-flex flex-column flex-1">
    <div class="container flex-1">
        <div class="innerSectionHeader searchPageHeader d-flex" id="PincodeSortandFilter">
            <a href="@Url.Action("Index","Home")" class="mr-2 pt-2"><img src="~/images/chevron-left.svg" alt=""></a>
            <div class="header flex-1 d-flex flex-column">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="d-flex align-items-center">
                        <h3 class="mb-0" id="PincodelistHeading"></h3>
                        <div class="ml-3 pl-2 text20px font-w-400 searchInfo" id="PincodePaginationText">
                        </div>
                    </div>

                    <div class="d-flex align-items-center">
                        <div class="custom-control custom-radio ">
                            <input type="radio" class="custom-control-input" id="projects" value="projects" name="pincodes-search" >
                            <label class="custom-control-label pointer" for="projects">Projects</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" id="locations" value="locations" name="pincodes-search">
                            <label class="custom-control-label pointer" for="locations">Locations</label>
                        </div>
                        <div class="custom-control custom-radio">
                            <input type="radio" class="custom-control-input" id="pincodes" value="pincodes" name="pincodes-search" checked="">
                            <label class="custom-control-label pointer mr-0" for="pincodes">Pincodes</label>
                        </div>
                    </div>
                </div>
                <div class="border-h"></div>
                <div class="d-flex align-items-center justify-content-end">
                    <div class="mr-1 sortBy">Sort by :</div>
                    <div class="d-flex mr-3" id="PincodenameSortID">
                        <a href="javascript:void(0)" class="pr-0" onclick="PincodeNameSortclick()">Name</a>
                        <a href="javascript:void(0)" class="" onclick="PincodeNamesortIconClick(event)" id="PincodeNameSortIcon"></a>
                    </div>
                    <div class="d-flex mr-3" id="PincodeCurrRateSortID">
                        <a href="javascript:void(0)" class="pr-0" onclick="PincodeCurRateSortclick()">Current Rate</a>
                        <a href="javascript:void(0)" class="" id="PincodeCurRateSortIcon" onclick="PincodeCurRateIconClick(event)"></a>
                    </div>
                    <div class="d-flex mr-3" id="PincodeyoySortID">
                        <a href="javascript:void(0)" class="pr-0" onclick="PincodeYoySortclick()">YoY Change(%)</a>
                        <a href="javascript:void(0)" class="" id="PincodeYoySortIcon" onclick="PincodeyoyIconClick(event)"></a>
                    </div>
                    <div class="d-flex mr-3" id="PincodeCAGR3YSortID">
                        <a href="javascript:void(0)" class="pr-0" onclick="Pincodecagr3ySortclick()">CAGR (3Y)</a>
                        <a href="javascript:void(0)" class="" id="Pincodecagr3ySortIcon" onclick="Pincodecagr3yIconClick(event)"></a>

                    </div>
                    <div class="d-flex mr-0" id="PincodeCAGR5YSortID">
                        <a href="javascript:void(0)" class="pr-0" onclick="Pincodecagr5ySortclick()">CAGR (5Y)</a>
                        <a href="javascript:void(0)" class="" id="Pincodecagr5ySortIcon" onclick="Pincodecagr5yIconClick(event)"></a>
                    </div>
                </div>

            </div>
        </div>

        <section class="searchResultSec">

            <div id="PincodeList">

            </div>
            <div class="text-center mt-5">
                <button class="btn btn-red rounded-0 viewMoreBtn" onclick="PincodeViewmoreListClick()" id="PincodeviewmoreList">View more</button>
            </div>
        </section>
    </div>
</div>




@section scripts{


    <script src="~/Scripts/PageLavel/List/PincodeList.js"></script>
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
            var selectedFilter;
            var _filterSelected = localStorage.getItem('ShortcutFilter');

            if (_filterSelected != null) {
                selectedFilter = JSON.parse(_filterSelected);
            }
            if (selectedFilter != null) {
                PincodeListModule.init(selectedFilter.sortby, selectedFilter.orderby);
            }
            else {
                PincodeListModule.init("name", "asc");
            }

            $('#overlay').fadeOut();

        });
    </script>



}
