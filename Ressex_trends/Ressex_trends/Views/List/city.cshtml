                    </div>
                </div>

            </div>
        </div>

        <section class="searchResultSec">

            <div id="CityList">

            </div>
            <div class="text-center mt-5">
                <button class="btn btn-red rounded-0 viewMoreBtn" onclick="CityViewmoreListClick()" id="CityviewmoreList">View more</button>
            </div>
        </section>
    </div>
</div>




@section scripts{


    <script src="~/Scripts/PageLavel/List/CityList.js"></script>
    <script type="text/javascript" charset="utf-8">
        $(document).ready(function () {
            var selectedFilter;
            var _filterSelected = localStorage.getItem('ShortcutFilter');

            if (_filterSelected != null) {
                selectedFilter = JSON.parse(_filterSelected);
            }
            if (selectedFilter != null) {
                CityListModule.init(selectedFilter.sortby, selectedFilter.orderby);
            }
            else {
                CityListModule.init("name", "asc");
            }

            $('#overlay').fadeOut();

        });
    </script>



}
